<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationAcitvity"
    android:orientation="vertical"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="581dp"
        android:layout_weight="1"
        android:background="@color/black"
        app:srcCompat="@drawable/registration_bg_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/bt_registration"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="50dp"
            android:background="@color/black"
            android:onClick="onRegistration"
            android:text="@string/registrarion"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="OnClick" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"/>
        <Button
            android:id="@+id/bt_authorization"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginRight="50dp"
            android:background="@color/black"
            android:onClick="onAuthorization"
            android:text="@string/authorization"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="OnClick" />

    </LinearLayout>

</LinearLayout>